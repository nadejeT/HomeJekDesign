<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_profile"
    android:id="@+id/rl">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/topshape" />


    <ImageView
        android:id="@+id/img"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/alarmmm" />

    <TextView
        android:id="@+id/hintQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/quicksand_medium"
        android:text="Choisissez la date et l'heure!"
        android:textAlignment="center"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/datelay"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:fontFamily="@font/quicksand_bold"
                android:text="Date"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:padding="13dp"
                android:textColor="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rect_green_border"
                android:orientation="horizontal"
                android:padding="13dp">

                <LinearLayout
                    android:id="@+id/babydatenv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/babyDateTXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.5dp"
                        android:fontFamily="@font/quicksand"
                        android:text="Aujourd'hui"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="16.5dp"
                    android:layout_height="16.5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_date_naissance" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/heuredebutlay"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@+id/datelay"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:fontFamily="@font/quicksand_bold"
                android:text="Heure dÃ©but"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:padding="13dp"
                android:textColor="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rect_green_border"
                android:orientation="horizontal"
                android:padding="13dp">

                <LinearLayout
                    android:id="@+id/heuredebutNVLay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/heuredebutNVtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.5dp"
                        android:fontFamily="@font/quicksand"
                        android:text="16:27:00"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="16.5dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/clock_icon" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/heurefinlay"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@+id/heuredebutlay"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:fontFamily="@font/quicksand_bold"
                android:text="Heure fin"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:padding="13dp"
                android:textColor="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rect_green_border"
                android:orientation="horizontal"
                android:padding="13dp">

                <LinearLayout
                    android:id="@+id/heurefinlayaay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/heurefintxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.5dp"
                        android:fontFamily="@font/quicksand"
                        android:text="16:27:00"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="16.5dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/clock_icon" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:id="@+id/babytime_suivant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_button"
                android:paddingLeft="48dp"
                android:paddingTop="11dp"
                android:paddingRight="48dp"
                android:paddingBottom="11dp"
                android:text="Suivant"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />


        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>